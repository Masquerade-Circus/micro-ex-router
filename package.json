{
  "name": "micro-ex-router",
  "version": "1.7.2",
  "description": "Express style router for micro",
  "main": "index.js",
  "repository": "https://github.com/Masquerade-Circus/micro-ex-router.git",
  "scripts": {
    "dev:test": "ava --watch",
    "test": "nyc ava",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "remark": "remark . -o"
  },
  "keywords": [
    "micro",
    "router",
    "express",
    "middleware",
    "micro-service",
    "framework",
    "server"
  ],
  "author": {
    "name": "Masquerade Circus",
    "email": "christian@masquerade-circus.net",
    "url": "http://masquerade-circus.net"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Masquerade-Circus/micro-ex-router/issues"
  },
  "homepage": "https://github.com/Masquerade-Circus/micro-ex-router#readme",
  "devDependencies": {
    "ava": "^2.4.0",
    "compression": "^1.7.4",
    "coveralls": "^3.0.7",
    "eslint-plugin-sonarjs": "^0.5.0",
    "expect": "^24.9.0",
    "express-winston": "^4.0.1",
    "nyc": "^14.1.1",
    "remark-cli": "^7.0.0",
    "remark-toc": "^6.0.0",
    "request": "^2.88.0",
    "winston": "^3.2.1"
  },
  "dependencies": {
    "micro": "^9.3.4",
    "recursive-readdir": "^2.2.2",
    "urlencoded-body-parser": "^3.0.0"
  },
  "ava": {
    "files": [
      "tests/**/*_test.js"
    ],
    "sources": [
      "**/*.{js,jsx}"
    ],
    "failWithoutAssertions": false
  },
  "nyc": {
    "exclude": [
      "tests",
      "examples"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "toc"
    ]
  }
}
